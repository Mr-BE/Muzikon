<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/song_img"
        android:layout_width="match_parent"
        android:layout_height="360dp"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="304dp"
        android:background="@color/now_p_transp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/repeat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="40dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/repeat_white" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/shuffle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="104dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/shuffle_white"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="104dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/heart_white"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="328dp"
        android:layout_height="12dp"
        android:layout_alignTop="@id/song_img"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        app:tickMark="@color/app_pink"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/now_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/seekBar"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/text_size_largest"
        android:textColor="@color/colorPrimary"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/now_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_alignTop="@id/now_text1"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/text_size_largest"
        android:textColor="@color/app_pink"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/now_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play_arrow_24px"
        android:layout_alignTop="@id/now_text2"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:focusable="true" />
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:src="@drawable/ic_back_grey"
        android:layout_alignTop="@id/now_text2"
        android:layout_alignEnd="@id/now_play"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:focusable="true" />
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:src="@drawable/forward_grey"
        android:layout_alignTop="@id/now_text2"
        android:layout_alignStart="@id/now_play"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:focusable="true" />


</RelativeLayout>